package loop;

public class Pattern22 
{
	public static void main(String[] args) 
	{
		int i,j,k;
		for(i=1;i<=7;i++)
		{
			for(k=1;k<=i;k++)
			{
				System.out.print(" ");
			}
			if(i%2==0)
				continue;
			else
				for(j=1;j<=i;j++)
				{
					System.out.print("*");
				}
			System.out.println();
		}
	}

}
